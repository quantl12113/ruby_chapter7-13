<header class="masthead" style="background-image: url('https://image.ibb.co/mqSHWy/home_bg.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 mx-auto">
        <div class="site-heading">
          <h1><%= t("my_blog") %></h1>
          <span class="subheading"><%= t("sub_title") %></span>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="row">  
  <div class="col-md-9">
    <h3><%= t("entries") %> </h3>
    <%= render "shared/feed" %>
  </div>
<% if logged_in? %>
  <aside class="col-md-3">
    <section class="user_info">
      <%= render "shared/user_info" %>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
<% end %> 
</div>
